<%- include('partials/header', { title: 'داشبورد' }) %>

<div class="container-fluid">
    <h1 class="h2 mb-4">داشبورد مدیریت</h1>

    <!-- آمار کلی -->
  <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card p-3 bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">کاربران</h5>
                        <p class="fs-2 fw-bold mb-0"><%= users.length %></p>
                    </div>
                    <i class="bi bi-people-fill fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 bg-success text-white">
                 <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">دوره‌ها</h5>
                        <p class="fs-2 fw-bold mb-0"><%= courses.length %></p>
                    </div>
                    <i class="bi bi-journal-bookmark-fill fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 bg-info text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">دسته‌بندی‌ها</h5>
                        <p class="fs-2 fw-bold mb-0"><%= categories.length %></p>
                    </div>
                    <i class="bi bi-tags-fill fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- بخش مدیریت -->
    <div class="row g-4">
        <!-- ستون دسته‌بندی و دوره -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">افزودن دسته‌بندی</h5>
                    <form id="add-category-form">
                        <div class="input-group">
                            <input type="text" id="category-name" class="form-control" placeholder="نام دسته‌بندی جدید" required>
                            <button class="btn btn-teal" type="submit">افزودن</button>
                        </div>
                    </form>
                    <hr>
                    <h5 class="card-title">افزودن دوره</h5>
                    <form id="add-course-form" class="mt-3">
                        <div class="mb-3">
                            <input type="text" id="course-name" class="form-control" placeholder="نام دوره جدید" required>
                        </div>
                        <div class="mb-3">
                             <select id="course-category" class="form-select" required>
                                <option value="" selected disabled>یک دسته‌بندی انتخاب کنید</option>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category._id %>"><%= category.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-teal w-100">افزودن دوره</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- ستون لیست دوره‌ها و کاربران -->
        <div class="col-lg-6">
             <div class="card">
                <div class="card-body">
                    <h5 class="card-title">لیست دوره‌ها</h5>
                    <ul class="list-group list-group-flush">
                        <% courses.forEach(course => { %>
                           <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <%= course.name %>
                                    <small class="text-muted d-block"><%= course.category ? course.category.name : 'بدون دسته‌بندی' %></small>
                                </div>
                                <a href="/admin/course/<%= course._id %>/questions" class="btn btn-sm btn-outline-dark">مدیریت سوالات</a>
                           </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
  
</div>

<!-- اسکریپت‌ها در فوتر قرار می‌گیرند -->
<%- include('partials/footer') %>

<!-- کد جاوااسکریپت شما باید بعد از فوتر باشد -->
<script>
    const token = document.cookie.split('; ').find(row => row.startsWith('token='))?.split('=')[1];

    // --- فرم افزودن دسته‌بندی ---
    document.getElementById('add-category-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const name = document.getElementById('category-name').value;
        if (!token) return alert('لطفا دوباره وارد شوید.');
        try {
            const res = await fetch('/api/courses/categories', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'x-auth-token': token },
                body: JSON.stringify({ name })
            });
            if (!res.ok) throw new Error('خطا در ساخت دسته‌بندی');
            location.reload();
        } catch (err) { alert(err.message); }
    });

    // --- فرم افزودن دوره ---
    document.getElementById('add-course-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const name = document.getElementById('course-name').value;
        const categoryId = document.getElementById('course-category').value;
        if (!token) return alert('لطفا دوباره وارد شوید.');
        if (!categoryId) return alert('لطفا یک دسته‌بندی انتخاب کنید.');
        try {
            const res = await fetch('/api/courses', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'x-auth-token': token },
                body: JSON.stringify({ name, categoryId })
            });
            if (!res.ok) throw new Error('خطا در ساخت دوره');
            location.reload();
        } catch (err) { alert(err.message); }
    });

  
</script>